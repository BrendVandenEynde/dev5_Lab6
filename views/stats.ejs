<!-- views/stats.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistics</title>
</head>
<body>
    <h1>Statistics for Teams</h1>
    
    <ul>
        <% teams.forEach(team => { %>
            <li><%= team.name %>: <%= team.score %></li>
        <% }); %>
    </ul>
</body>
</html>
